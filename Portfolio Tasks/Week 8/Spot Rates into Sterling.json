{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Spot Exchange Rates against Sterling",
      "subtitle": ["Daily Rates into Sterling; USD, EUR, CAD. Source: BoE", ""],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "#cbc7cf",
      "subtitleColor": "#cbc7cf"
    },
    "config": {"background": "#122b39", "view": {"stroke": "transparent"}},
    "data": {
      "url": "https://raw.githubusercontent.com/BaderAlSarraf/BaderAlSarraf.github.io/main/BOE%20GBP%20Spot%20Rates%20(MM-DD).csv"
    },
    "transform": [
      {"calculate": "year(datum.Date)", "as": "year"},
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"},
      {"filter": "datum.y1!=0"}
    ],
    "params": [
      {
        "name": "minYear",
        "value": 2015,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2022,
          "step": 1,
          "name": "Start year:"
        }
      },
      {
        "name": "maxYear",
        "value": 2022,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2022,
          "step": 1,
          "name": "End year:"
        }
      }
    ],
    "repeat": {"layer": ["GBP/USD", "GBP/EUR", "GBPCAD"]},
    "spec": {
      "height": 300,
      "width": 400,
      "mark": {"type": "line", "strokeWidth": 2},
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": null,
          "axis": {"grid": false, "labelColor": "#cbc7cf"}
        },
        "y": {
          "field": {"repeat": "layer"},
          "type": "quantitative",
          "title": null,
          "scale":{"domain":[1, 2.2]},
          "axis": {"grid": false, "labelColor": "#cbc7cf"}
        },
        "color": {
          "datum": {"repeat": "layer"},
          "scale": {"range": ["red", "orange", "blue"]},
          "legend": {
            "labelExpr": "{'GBP/USD': 'GBP/USD', 'GBP/EUR': 'GBP/EUR', 'GBPCAD':'GBP/CAD'}[datum.label]",
            "orient": "top-right",
            "labelColor": "#cbc7cf",
            "title": "Spot Rate",
            "titleColor": "#cbc7cf"
          }
        }
      }
    },
    "width": "container",
    "autosize": {"type": "pad", "contains": "padding", "resize": true}
  }